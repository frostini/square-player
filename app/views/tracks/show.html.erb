<div class="container-lg d-flex flex-column flex-justify-start">
  <div class="mt-3 mb-1">
    <h1 class="h3-mktg h-branded-font mb-2">View/Edit Track</h1>
    <p class="f3-mktg">
      Here are your track details. You can also scroll to the bottom of the page to view a sample player with your track details.
    </p>
    <hr width="100px"> 
  </div>

  <%=render "form", method: "patch", url: track_path(@track) %>
  <hr width="100px">     
  <%if @track.full_audio.attached? && @track.cover_image.attached? %>
    <div class="pb-10  d-flex flex-column flex-justify-start">
      <h6 class="h6-mktg h-branded-font mb-5">Current Track Preview</h6>  
      <div class="h-border-radius color-shadow-large p-2">
        <%= render(AudioPlayer::AudioPlayerComponent.new(tracks: [@track]))%>
      </div>
    </div>
  <%end%>
</div>