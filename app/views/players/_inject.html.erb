<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", ready);
  function ready() {
    let ifrm = document.createElement("iframe");
    ifrm.setAttribute("src", "https://morning-hamlet-04857.herokuapp.com/square-player/1");
    ifrm.style.position = "fixed";
    ifrm.style.zIndex = 100;
    ifrm.style.bottom = 0;
    ifrm.style.right = 0;
    ifrm.style.width = "100%";
    ifrm.style.maxWidth = "600px";
    ifrm.style.minWidth = "300px";
    ifrm.style.borderRadius = "25px";
    ifrm.style.height = "auto";
    ifrm.style.background = "transparent";
    ifrm.style.border = "none";
    ifrm.style.scrolling = "no";
    ifrm.style.overflow = "hide";
    document.body.appendChild(ifrm);
  }
</script>